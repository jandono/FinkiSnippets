@model App.ViewModels.FilterSnippetsViewModel

@{
    ViewBag.Title = "Snippets";
    
}

<div class="grid">
    <div class="row">

        <h2 class="span9">Снипети</h2>
        <a class="button large" href="@Url.Action("CreateSnippet","Admin")">Додади нов снипет</a>
    </div>

    @using (Ajax.BeginForm("FilterSnippets", new AjaxOptions { HttpMethod = "GET", LoadingElementId = "loader", }))
    {
        <div class="row">
            <div class="span9">
                <div class="example">
                    <form>
                        <fieldset>
                            <legend>Филтер</legend>
                            <label>Групи</label>
                                                        
                            <div class="input-control select">
                                <select id="groupSelect" name="SelectedGroups" multiple style="width:100%;">
                                    @foreach (var item in Model.Groups)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>

                            <label>Операции</label>

                            <div class="input-control select">
                                <select id="operationSelect" name="SelectedOperations" multiple style="width:100%;">
                                    @foreach (var item in Model.Operations)
                                    {
                                        <option value="@item.ID">@item.Name (@item.Operator)</option>
                                    }
                                </select>
                            </div>

                            <input type="submit" value="Филтрирај">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<hr />

@{Html.RenderPartial("_ListSnippets", Model.Snippets);}

@section Scripts{
    <script src="~/Scripts/src-noconflict/ace.js"></script>
    <script src="~/Scripts/metro-times.js"></script>

    <script>
        $(function () {

            $("#groupSelect").select2({
                placeholder: "Селектирај групи",
                allowClear: true
            });

            $("#operationSelect").select2({
                placeholder: "Селектирај операции",
                allowClear: true
            });

            var snippetsData = [];

            $.get('@Url.Action("GetCodes","Admin")', function (data) {
                snippetsData = data;
                snippetsData.reverse();
                console.log(snippetsData);

                var editors = $(".codeEditor");

                editors.each(function (idx) {

                    var editor = ace.edit("editor_" + idx);
                    editor.setTheme("ace/theme/eclipse");
                    editor.getSession().setMode("ace/mode/java");
                    editor.setOptions({
                        readOnly: true,
                        highlightActiveLine: false,
                        highlightGutterLine: false
                    });

                    editor.renderer.$cursorLayer.element.style.opacity = 0;

                    var heightUpdateFunction = function () {

                        // http://stackoverflow.com/questions/11584061/
                        var newHeight =
                                  editor.getSession().getScreenLength()
                                  * editor.renderer.lineHeight
                                  + editor.renderer.scrollBar.getWidth();

                        $('#editor_' + idx).height(newHeight.toString() + "px");
                        $('#editor-section').height(newHeight.toString() + "px");

                        // This call is required for the editor to fix all of
                        // its inner structure for adapting to a change in size
                        editor.resize();
                    };

                    editor.getSession().setValue(decodeURIComponent(snippetsData[idx].Code));
                    heightUpdateFunction();
                    editor.getSession().on('change', heightUpdateFunction);
                });
            });
        });

    </script>
}
